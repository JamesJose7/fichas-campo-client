<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FichaFormActivity"
    tools:showIn="@layout/activity_ficha_form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--Detalles ficha-->
    <androidx.cardview.widget.CardView
        android:id="@+id/ficha_detalles_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Detalles Ficha"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/bottom_border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Datum:"/>

            <EditText
                android:id="@+id/datum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Escala:"/>
            <EditText
                android:id="@+id/escala_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Proyecto:"/>
            <EditText
                android:id="@+id/proyecto_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Descrita por:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/descrita_por_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Datos ubicación:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/datos_ubicacion_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Nomenclatura unidad geológica:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/nom_unidad_geo_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Tipo de Contacto:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/tipo_contacto_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Limite de Contacto:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/limite_contacto_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Certexa de Contacto:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/certeza_contacto_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Origen de Roca:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/origen_roca_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Estructura de Roca:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/estructura_roca_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ubicacion_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/ficha_detalles_layout">
        <!--Detalles ubicacion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bottom_border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Provincia:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/provincia_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Canton:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/canton_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Sector:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/sector_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Escala:"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/escala_ubicacion_text"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Foto:"
                android:layout_marginTop="6dp"/>
            <ImageView
                android:id="@+id/foto_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>